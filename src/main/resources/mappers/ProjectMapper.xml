<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zoey.dao.ProjectDao">

	<resultMap type="Project" id="ProjectResult">
		<result property="projectId" column="project_id"/>
		<result property="title" column="title"/>
		<result property="summary" column="summary"/>
		<result property="coverImage" column="cover_image"/>
		<result property="createTime" column="create_time"/>
		<result property="updateTime" column="update_time"/>
	</resultMap>

	<select id="listProject" parameterType="Map" resultMap="ProjectResult">
		SELECT * FROM project
		<if test="start!=null and rows!=null">
			limit #{start} , #{rows}
		</if>
	</select>

	<select id="getProjectCount" parameterType="Map" resultType="Integer">
		SELECT count(*) FROM project
	</select>

	<insert id="addProject" parameterType="Project">
		insert into project VALUES (null,#{title},#{summary},#{coverImage},#{createTime},#{updateTime})
	</insert>

	<update id="updateProject" parameterType="Project">
		UPDATE project SET title=#{title},summary=#{summary},cover_image=#{coverImage}ï¼Œcreate_time=#{createTime},update_time=#{updateTime}
	</update>

	<delete id="deleteProject" parameterType="Integer">
		DELETE FROM project WHERE project_id=#{projectId}
	</delete>

</mapper> 